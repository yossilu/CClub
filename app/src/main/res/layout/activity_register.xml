<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.cclub.RegisterPage">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:id="@+id/formBack"
        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >


        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/trans_white_rectangle"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"


            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Started"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Just a few details to get you started"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginBottom="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"

                />

            <AutoCompleteTextView
                android:id="@+id/userPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/rounded_white"
                android:drawablePadding="5dp"
                android:hint="Phone Number"
                android:paddingLeft="40dp"
                android:textSize="14sp" />

            <AutoCompleteTextView
                android:id="@+id/userEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email without ."
                android:background="@drawable/rounded_white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableLeft="@drawable/ic_email_icon2"
                android:textSize="14sp"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="5dp"
                />

            <AutoCompleteTextView
                android:id="@+id/userFirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/rounded_white"
                android:drawableLeft="@drawable/ic_user_icon"
                android:drawablePadding="5dp"
                android:hint="First Name"
                android:paddingLeft="10dp"
                android:textSize="14sp" />

            <AutoCompleteTextView
                android:id="@+id/userLast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/rounded_white"
                android:drawablePadding="5dp"
                android:hint="Last Name"
                android:paddingLeft="40dp"
                android:textSize="14sp" />

            <AutoCompleteTextView
                android:id="@+id/userAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/rounded_white"
                android:drawablePadding="5dp"
                android:hint="Address"
                android:paddingLeft="40dp"
                android:textSize="14sp" />



            <AutoCompleteTextView
                android:id="@+id/userPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:background="@drawable/rounded_white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableLeft="@drawable/ic_pass_icon"
                android:textSize="14sp"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:inputType="textPassword"
                android:layout_marginBottom="5dp"
                />

            <AutoCompleteTextView
                android:id="@+id/userCPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:background="@drawable/rounded_white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableLeft="@drawable/ic_confirmpass_icon"
                android:textSize="14sp"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:inputType="textPassword"
                android:layout_marginBottom="5dp"
                />
            <LinearLayout

                android:layout_width="wrap_content"
                android:background="@drawable/big_rounded_grey"
                android:orientation="horizontal"
                android:layout_height="40dp"
                android:layout_gravity="center"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:text="Add a Profile Picture"
                    android:gravity="center"
                    android:textColor="#333870"
                    android:textSize="14sp"
                    android:paddingLeft="7dp"
                    />

                <ImageButton
                    android:id="@+id/photoBtnReg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_camera_icon"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    />

                <!--<Button-->
                <!--android:id="@+id/photoBtnReg"-->
                <!--style="@style/Platform.V14.AppCompat.Light"-->
                <!--android:layout_width="86dp"-->
                <!--android:layout_height="59dp"-->
                <!--android:layout_marginBottom="8dp"-->
                <!--android:layout_marginEnd="8dp"-->
                <!--android:layout_marginStart="8dp"-->
                <!--android:layout_marginTop="8dp"-->
                <!--android:text="@string/camera"-->
                <!--app:layout_constraintBottom_toTopOf="@+id/galleryBtnReg"-->
                <!--app:layout_constraintEnd_toStartOf="@+id/imageViewReg"-->
                <!--app:layout_constraintStart_toStartOf="parent"-->
                <!--app:layout_constraintTop_toBottomOf="@+id/UploadTextView" />-->

                <ImageButton
                    android:id="@+id/galleryBtnReg"
                    android:contentDescription="@string/opens_the_gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_gallery_icon2"

                    />


            </LinearLayout>
            <ImageView
                android:id="@+id/imageViewReg"
                android:layout_gravity="center_horizontal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/todo"
                app:layout_constraintBottom_toTopOf="@+id/include"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@android:drawable/progress_horizontal"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:button="@drawable/radio_button"
                android:paddingLeft="5dp"
                android:text="I agree to the Terms and Conditions"
                android:textColor="@color/white"
                android:textSize="12sp"
                />

            <Button
                android:id="@+id/userRegisterBtn"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/register_button"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="normal" />

        </LinearLayout>

    </ScrollView>

    <include
        android:id="@+id/include"
        layout="@layout/menu_footer"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scrollView" />

</RelativeLayout>


